<%= form_for Moirai::Translation.new, url: moirai.moirai_create_or_update_translation_path, data: {controller: "translation"} do |f| %>
  <%= f.hidden_field :key, value: key %>
  <%= f.hidden_field :file_path, value: file_path %>
  <%= f.hidden_field :locale, value: I18n.locale %>
  <%= f.text_field :value, value: value %>
  <%= f.submit 'Update', style: 'display: none;' %>
<% end %>
